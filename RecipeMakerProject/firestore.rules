rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Health data subcollection - users can only access their own health data
      match /health/{healthDoc} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow reading user profiles for other users (for social features)
      allow read: if request.auth != null;
    }
    
    // Recipes collection - authenticated users can read all, write their own
    match /recipes/{recipeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (resource == null || resource.data.authorId == request.auth.uid);
    }
    
    // Public collections that all authenticated users can read
    match /ingredients/{document=**} {
      allow read: if request.auth != null;
    }
    
    match /nutritionData/{document=**} {
      allow read: if request.auth != null;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
